<UserControl x:Class="Copier.Views.ActionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Copier.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Grid.Column="1">
            <Button Content="Save" Command="{Binding SaveCopyJobCommand}" HorizontalAlignment="Right" FontSize="20" Background="LightBlue" Width="200" FontWeight="Bold"/>
            <Button Content="Run" Command="{Binding CopyFilesCommand}" Background="LightGreen" HorizontalAlignment="Right" FontSize="20" Grid.Column="1" Width="200" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
