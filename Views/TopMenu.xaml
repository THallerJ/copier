<UserControl x:Class="Copier.Views.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Copier.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <StackPanel>
        <Menu Background="{StaticResource DarkMain}" Height="20">
            <MenuItem Header="Files" Foreground="{StaticResource MainText}" Margin="0, 4, 0, 0">
                <MenuItem Header="Clear data" HorizontalAlignment="Left" Command="{Binding ClearDataCommand}" Foreground="Black"/>
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
